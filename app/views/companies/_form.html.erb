<%=form_with(model: company) do |f|%>
    <div class="modal-body">
        <%= render 'shared/errors', obj: company %>
        <div class="form-group">
            <%=f.label "company name", class: "form-label mb-2 mt-3"%>
            <%=f.text_field :company_name, class: "form-control form-control-lg"%>
        </div>
        <div class="form-group">
            <%=f.label "Established on", class: "form-label mb-2 mt-3"%>
            <%=f.date_field :established_on, class: "form-control form-control-lg"%>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <%= f.submit class: "btn btn-primary", data: {action: "click->bs-modal#submitEnd"} %>
    </div>
<% end %>